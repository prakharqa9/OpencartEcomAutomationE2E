<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4" parallel="tests" thread-count="3">
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
	</listeners>
	
	<test name="Login Page Test _ chrome">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest"/>
		</classes>
	</test>
	
	<test name="Login Page Test _ firefox">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest"/>
		</classes>
	</test>
	
	<test name="Login Page Test _ edge">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest"/>
		</classes>
	</test>
	
	<test name="Accounts Page Test _chrome">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
		</classes>
	</test>
	
	<test name="Accounts Page Test _ firefox">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
		</classes>
	</test>
	
	<test name="Accounts Page Test _ edge">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest"/>
		</classes>
	</test>
	
	<test name="Product Info Page Test _ chrome">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest"/>
		</classes>
	</test>
	
	<test name="Product Info Page Test _ firefox">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest"/>
		</classes>
	</test>
	
	<test name="Product Info Page Test _ edge">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest"/>
		</classes>
	</test>
	
	<test name="Register Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest"/>
		</classes>
	</test>
	
	<test name="Register Page Test _firefox">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest"/>
		</classes>
	</test>
	
	<test name="Register Page Test _ edge">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest"/>
		</classes>
	</test>
</suite>